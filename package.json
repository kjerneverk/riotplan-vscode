{
  "name": "riotplan-vscode",
  "displayName": "RiotPlan",
  "description": "Plan management for RiotPlan HTTP server",
  "version": "1.0.5-dev.0",
  "publisher": "kjerneverk",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "RiotPlan",
      "properties": {
        "riotplan.serverUrl": {
          "type": "string",
          "default": "http://127.0.0.1:3002",
          "description": "RiotPlan HTTP MCP server URL"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "riotplan",
          "title": "RiotPlan",
          "icon": "media/riotplan-icon.svg"
        }
      ]
    },
    "views": {
      "riotplan": [
        {
          "id": "riotplan-plans",
          "name": "Plans"
        },
        {
          "id": "riotplan-projects",
          "name": "Projects"
        },
        {
          "id": "riotplan-connection",
          "name": "Connection Status"
        }
      ]
    },
    "commands": [
      {
        "command": "riotplan.refreshPlans",
        "title": "Refresh Plans",
        "icon": "$(refresh)"
      },
      {
        "command": "riotplan.filterPlansByProject",
        "title": "Filter by Project",
        "icon": "$(filter)"
      },
      {
        "command": "riotplan.filterPlansByStatus",
        "title": "Filter by Status",
        "icon": "$(list-filter)"
      },
      {
        "command": "riotplan.addPlan",
        "title": "Add New Plan",
        "icon": "$(add)"
      },
      {
        "command": "riotplan.sortPlans",
        "title": "Sort Plans",
        "icon": "$(sort-precedence)"
      },
      {
        "command": "riotplan.uploadPlan",
        "title": "Upload Plan",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "riotplan.downloadPlan",
        "title": "Download Plan",
        "icon": "$(cloud-download)"
      },
      {
        "command": "riotplan.openPlan",
        "title": "Open Plan"
      },
      {
        "command": "riotplan.openPlanDetails",
        "title": "Open Details",
        "icon": "$(preview)"
      },
      {
        "command": "riotplan.configureServerUrl",
        "title": "Configure Server URL",
        "icon": "$(gear)"
      },
      {
        "command": "riotplan.reconnect",
        "title": "Reconnect",
        "icon": "$(plug)"
      },
      {
        "command": "riotplan.openDashboard",
        "title": "Open Dashboard",
        "icon": "$(dashboard)"
      },
      {
        "command": "riotplan.copyPlanUrl",
        "title": "Copy Plan URL",
        "icon": "$(link-external)"
      },
      {
        "command": "riotplan.changePlanProject",
        "title": "Change Project",
        "icon": "$(repo)"
      },
      {
        "command": "riotplan.openProjectEntity",
        "title": "Open Project Details",
        "icon": "$(symbol-structure)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "riotplan.openDashboard",
          "when": "view == riotplan-plans",
          "group": "navigation"
        },
        {
          "command": "riotplan.refreshPlans",
          "when": "view == riotplan-projects",
          "group": "navigation"
        },
        {
          "command": "riotplan.refreshPlans",
          "when": "view == riotplan-plans",
          "group": "navigation"
        },
        {
          "command": "riotplan.filterPlansByProject",
          "when": "view == riotplan-plans",
          "group": "navigation"
        },
        {
          "command": "riotplan.filterPlansByStatus",
          "when": "view == riotplan-plans",
          "group": "navigation"
        },
        {
          "command": "riotplan.addPlan",
          "when": "view == riotplan-plans",
          "group": "navigation"
        },
        {
          "command": "riotplan.sortPlans",
          "when": "view == riotplan-plans",
          "group": "navigation"
        },
        {
          "command": "riotplan.uploadPlan",
          "when": "view == riotplan-plans",
          "group": "navigation"
        },
        {
          "command": "riotplan.configureServerUrl",
          "when": "view == riotplan-connection",
          "group": "navigation"
        },
        {
          "command": "riotplan.reconnect",
          "when": "view == riotplan-connection",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "riotplan.openPlanDetails",
          "when": "view == riotplan-plans && viewItem == plan",
          "group": "navigation@1"
        },
        {
          "command": "riotplan.copyPlanUrl",
          "when": "view == riotplan-plans && viewItem == plan",
          "group": "navigation@2"
        },
        {
          "command": "riotplan.changePlanProject",
          "when": "view == riotplan-plans && viewItem == plan",
          "group": "navigation@3"
        },
        {
          "command": "riotplan.openProjectEntity",
          "when": "view == riotplan-plans && viewItem == plan",
          "group": "navigation@4"
        },
        {
          "command": "riotplan.downloadPlan",
          "when": "view == riotplan-plans && viewItem == plan",
          "group": "navigation@5"
        },
        {
          "command": "riotplan.openProjectEntity",
          "when": "view == riotplan-projects && viewItem == project",
          "group": "navigation@1"
        }
      ]
    }
  },
  "scripts": {
    "clean": "rm -rf dist out",
    "build": "tsc -p ./",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "lint": "eslint src",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "precommit": "npm run build && npm run lint && npm run coverage",
    "prepublishOnly": "npm run clean && npm run build",
    "vscode:prepublish": "npm run build"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.28.0",
    "@types/node": "^24.10.9",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "@vitest/coverage-v8": "^4.0.18",
    "@vscode/vsce": "^3.0.0",
    "eslint": "^9.28.0",
    "eslint-plugin-import": "^2.31.0",
    "globals": "^17.0.0",
    "typescript": "^5.8.3",
    "vitest": "^4.0.18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kjerneverk/riotplan-vscode"
  },
  "license": "Apache-2.0",
  "author": "Tim O'Brien <tobrien@discursive.com>"
}
